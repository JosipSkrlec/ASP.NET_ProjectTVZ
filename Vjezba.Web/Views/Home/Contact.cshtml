@{
    ViewData["Title"] = "Contact page";
}
<h1>@ViewData["Title"]</h1>

<p>Podaci proslijeđeni iz controller-a: @ViewData["Message"]</p>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Contact</li>
    </ol>
</nav>


<form action="/Home/SubmitQuery" method="post">

    <div class="form-row">
        <div class="form-group col-md-6 col-sm-12">
            <label for="inputIme">Ime</label>
            <input type="text" class="form-control" id="inputIme" name="inputIme" placeholder="Ime">
        </div>

        <div class="form-group col-md-6 col-sm-12">
            <label for="inputPrezime">Prezime</label>
            <input type="text" class="form-control" id="inputPrezime" name="inputPrezime" placeholder="Prezime">
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-12 col-sm-12">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="Email">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="FormTextarea">Poruka:</label>
            <textarea class="form-control" id="FormTextarea" name="FormTextarea" rows="4" placeholder="Ovdje ide Vaša poruka!"></textarea>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12 col-sm-12">
            <label for="inputState">Tip upita</label>
            <select id="inputState" name="inputState" class="form-control">
                <option selected>Upit</option>
                <option>Pohvala</option>
                <option>Žalba</option>
                <option>Poslovni prijedlog!</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-10 col-sm-6">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="NewsletterInput" id="NewsletterInput">
                <label class="form-check-label" for="NewsletterInput">
                    želim primati newsletter
                </label>
            </div>
        </div>

        <div class="form-group col-md-2 col-sm-6">
            <button href="@Url.Action("SubmitQuery", "Home")" type="submit" class="btn btn-primary">Pošalji upit</button>
        </div>

    </div>

    <div class="form-row">
        <div class="card col-md-6 col-sm-12">
            <h5 class="card-header">Adresa sjedišta</h5>
            <div class="card-body">
                <h5 class="card-title">Naša adresa,</h5>
                <p class="card-text">Vrbik 6. 10000 Zagreb</p>
            </div>
        </div>
        <div class="card col-md-6 col-sm-12">
            <h5 class="card-header">Javite nam se!</h5>
            <div class="card-body">
                <h5 class="card-title">Javite se na</h5>
                <p class="card-text"><a href="#">jskrlec1997@gmail.com</a></p>
            </div>
        </div>
    </div>

</form>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <form action="/Home/SubmitQuery" method="post">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title">Kontakt forma</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputIme">Ime</label>
                        <input type="text" class="form-control" id="inputIme" name="inputIme" placeholder="Ime">
                    </div>
                    <div class="form-group">
                        <label for="inputPrezime">Prezime</label>
                        <input type="text" class="form-control" id="inputPrezime" name="inputPrezime" placeholder="Prezime">
                    </div>

                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="Email">
                    </div>

                    <div class="form-group">
                        <label for="FormTextarea">Poruka:</label>
                        <textarea class="form-control" id="FormTextarea" name="FormTextarea" rows="4" placeholder="Ovdje ide Vaša poruka!"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="inputState">Tip upita</label>
                        <select id="inputState" name="inputState" class="form-control">
                            <option selected>Upit</option>
                            <option>Pohvala</option>
                            <option>Žalba</option>
                            <option>Poslovni prijedlog!</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="NewsletterInput" id="NewsletterInput">
                            <label class="form-check-label" for="NewsletterInput">
                                želim primati newsletter
                            </label>
                        </div>
                    </div>

                </div>


                <div class="modal-footer">
                    <div class="form-group">
                        <button href="@Url.Action("SubmitQuery", "Home")" type="submit" class="btn btn-primary">Pošalji upit</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Kontaktirajte nas!</button>
