@using Vjezba.Web.Mock
@model List<Client>

@{ ViewData["Title"] = "Home Page"; }

<style>
    .tab-pane {
        padding: 20px;
    }
</style>

<div style="margin-top: 20px;">
    <!-- Nav tabs -->

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link @(ViewBag.ActiveTab == 1 ? "active" : "")" href="#z-5-5" aria-controls="z-5-5" role="tab" data-toggle="tab">Zadatak 5.5</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.ActiveTab == 2 ? "active" : "")" href="#z-5-6" aria-controls="z-5-6" role="tab" data-toggle="tab">Zadatak 5.6</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.ActiveTab == 3 ? "active" : "")" href="#z-5-7" aria-controls="z-5-7" role="tab" data-toggle="tab">Zadatak 5.7</a>
        </li>

        <li class="nav-item">
            <a class="nav-link @(ViewBag.ActiveTab == 4 ? "active" : "")" href="#z-6-3" aria-controls="z-6-3" role="tab" data-toggle="tab">Zadatak 6.3</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.ActiveTab == 5 ? "active" : "")" href="#z-6-3-1" aria-controls="z-6-3-1" role="tab" data-toggle="tab">Zadatak 6.3-1</a>
        </li>


    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 1 ? "show active" : "")" id="z-5-5">
            <h4>Zadatak 5.5 - GET forma s jednim parametrom</h4>
            <form action="@Url.Action("Index")" method="get" class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" name="query" placeholder="Upišite željeni pojam">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 2 ? "show active" : "")" id="z-5-6">
            <h4>Zadatak 5.6 - POST forma s dva parametra</h4>
            <form action="@Url.Action("Index")" method="post" class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" name="queryName" placeholder="Pretraga po imenu">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="queryAddress" placeholder="Pretraga po adresi">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 3 ? "show active" : "")" id="z-5-7">
            <h4>Zadatak 5.7 - POST forma, binding na model</h4>
            <form action="@Url.Action("AdvancedSearch")" method="post" class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" name="FullName" placeholder="Pretraga po imenu">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Address" placeholder="Pretraga po adresi">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Email" placeholder="Pretraga po e-mailu">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="City" placeholder="Pretraga po gradu">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 4 ? "show active" : "")" id="z-6-3">

            <section id="PartialView">
                @await Html.PartialAsync("_ClientFilter",model: new ClientFilterModel())
            </section>

            @*<partial name="_ClientFilter" />*@

        </div>

        <div role="tabpanel" class="tab-pane @(ViewBag.ActiveTab == 5 ? "show active" : "")" id="z-6-3-1">
                       

            <section id="PartialView">
                @await Html.PartialAsync("_ClientFilter1", model: new ClientFilterModel())
            </section>

            @*<input type="text" name="@Html.NameFor(p => p.)" />*@

        </div>

    </div>
</div>



<table style="margin-top: 20px;" class="table table-condensed">

    <thead>
        <tr>
            <th>Client</th>
            <th>Address</th>
            <th>Email</th>
            <th>City</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        <a asp-action="Details" asp-route-id="@item.ID">@item.FullName</a>
    </td>
    <td>@item.Address</td>
    <td>@item.Email</td>
    <td>@item.City?.Name</td>
</tr>}
    </tbody>

</table>