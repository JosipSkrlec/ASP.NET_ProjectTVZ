@using Vjezba.Web.Models

@model ThreeDFilterModel

<form action="@Url.Action("Index")" method="post" id="filter-form">
	<div class="form-row">
		<div class="col-3">
			<input asp-for="Name" class="form-control" type="text" placeholder="Name" />
		</div>
		<div class="col-3">
			<input asp-for="Category" class="form-control" type="text" placeholder="Category" />
		</div>
		<div class="col-2">
			<button type="button" class="btn btn-outline-info" id="filterBtn">Search</button>
			<a asp-action="Create" class="btn btn-success">Add 3D Model</a>
		</div>
	</div>
</form>